pipeline {
    agent any

    stages {
        stage('checkout') {
            steps {
                git 'https://github.com/Pritam-Khergade/student-ui.git'
            }
        }
        stage('build') {
            steps {
                sh 'mvn clean install'
                sh 'mv /var/jenkins_home/workspace/pipeforgit/target/studentapp-2.2-SNAPSHOT.war studentapp-2.2-SNAPSHOT${BUILD_TIMESTAMP}.war'
            }
        } 
        stage('push') {
            steps {
                sh 'aws s3 cp /var/jenkins_home/workspace/pipeforgit/target/studentapp-2.2-SNAPSHOT${BUILD_TIMESTAMP}.war s3://jnkin-bkt'
            }
        } 

    }
}
